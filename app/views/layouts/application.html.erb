<!DOCTYPE html>

<html>
  <head>
    <title>TwitterRedesign</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="main-grid">
    <% if user_signed_in? %>
     
      <div class="left-container bg-secondary col-md-2">
          <div class="d-flex pt-3 pb-3 pr-3 pl-3">
            <%= image_tag(current_user.photo) %>
            <span class="title-color username text-light"><%= link_to "#{current_user.username}", "/users/#{current_user.id}",
            class: "title-color text-light" %></span>
          </div>
          <div class="d-flex text-center pl-3 pr-3 justify-content-between mt-3">
            <div>
              <span class="light-grey text-light"><%=  following(current_user) %></span><br>
              <span class="title-color text-light">Following</span>&nbsp; 
            </div>

            <div>
              <span class="light-grey text-light"><%=  followers(current_user) %> </span><br>
              <span class="title-color text-light">Followers</span>
            </div>
          </div>
          <div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <%= link_to root_path do %>
              <img class="icon mr-3" alt="home-icon"src="https://cdn.pixabay.com/photo/2013/07/12/12/56/home-146585_1280.png">
              <span class="title-color icon-text text-light">HOME</span>
              <% end %>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://static.thenounproject.com/png/395124-200.png">
              <span class="title-color icon-text text-light">CONNECT</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://www.iconfinder.com/data/icons/feather-2/24/hash-512.png">
              <span class="title-color icon-text text-light">DISCOVER</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" src="data:image/svg+xml;base64," />
              <span class="title-color icon-text text-light">PROFILE</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" alt="home-icon"src="https://image.flaticon.com/icons/png/512/69/69517.png">
              <span class="title-color icon-text text-light">STATISTICS</span>
            </div>
            <div class=" pt-3 pb-3 pl-3 pr-3">
              <img class="icon mr-3" src="data:image/svg+xml;base64," />
              <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete, class: "sign-out title-color icon-text text-light" %>
            </div>
          </div>
      </div>
      <div class="right-container">
        <div class="top-section d-flex justify-content-between pb-1 pr-3 pl-3 twitter-color">

        </div>
        <div class="bottom-section"> 
          <%= yield %>
      </div>
   
    <% else %>
      
        <div class="left-container twitter-color"></div>
        <div class="right-container text-center pt-3 pr-3 pl-3 pb-3 margin-login">
          <%= yield %>
        </div>
      
    <% end %>

  </body>
</html>
