<!DOCTYPE html>
<html>
  <head>
    <title>Tweeter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "/layouts/nav" %>
    <div class="container">
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span> 
    </div>
    <%= yield %>
  </body>
</html>
