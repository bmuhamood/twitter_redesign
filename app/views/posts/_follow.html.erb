<div>
	<div class="container" >
		<div class="bottom-nav mt-3">
			<span class="nav-title">WHO TO FOLLOW</span>
		</div>
		<div class="mt-3 title-color">

			<% @users.each do |user| %>
				<div class="d-flex mt-2">
					   <%= image_tag(user.photo.variant(resize: "50x50"), size: '50', class: 'rounded-circle') %>
					<div class="ml-3">
						<%= user.username %><br>
						<span class="follow-link"><%= follow(user) %></span>
						<span class="follow-link"><%= link_to 'show', "/users/#{user.id}" %></span>
						<br><br>
					</div>
				</div>

			<% end %>
		</div>
		
	</div>
	<div></div>
	<div></div>
</div>